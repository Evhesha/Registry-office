<Window x:Class="BD6.Windows.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD6.Windows"
        mc:Ignorable="d"
        Title="ServicesWindow" Height="450" Width="560" ResizeMode="NoResize" Background="LightSteelBlue">
    <Grid>
        <DataGrid Name="ServicesDataGrid" Loaded="ServicesDataGrid_Loaded" FontSize="14" Margin="0,0,249,0"/>

        <Button Name="ReadButton" Content="Read" HorizontalAlignment="Left" Height="36" Margin="321,205,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="ReadButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="36" Margin="321,297,0,0" VerticalAlignment="Top" Width="91" Background="Tomato" Click="CancelButton_Click"/>
        <Button Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="36" Margin="321,250,0,0" VerticalAlignment="Top" Width="91" Background="Tomato" Click="DeleteButton_Click"/>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="36" Margin="321,345,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="SaveButton_Click"/>

        <Button Name="FirstButton" Content="First" HorizontalAlignment="Left" Height="36" Margin="434,205,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="FirstButton_Click"/>
        <Button Name="NextButton" Content="Next ->" HorizontalAlignment="Left" Height="36" Margin="434,250,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="NextButton_Click"/>
        <Button Name="PreviousButton" Content="Previous -" HorizontalAlignment="Left" Height="36" Margin="434,297,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="PreviousButton_Click"/>
        <Button Name="LastButton" Content="Last" HorizontalAlignment="Left" Height="36" Margin="434,345,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="LastButton_Click"/>

        <Image Source="/pictures/services.png" Margin="366,2,58,295"></Image>
        <Label Content="Services" HorizontalAlignment="Left" Margin="393,124,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Black" Height="31" Width="113"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="207" Margin="305,194,0,0" VerticalAlignment="Top" Width="234"/>
    </Grid>
</Window>