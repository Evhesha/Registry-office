<Window x:Class="BD6.Windows.RegistrarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD6.Windows"
        mc:Ignorable="d"
        Title="RegistrarsWindow" Height="450" Width="590" ResizeMode="NoResize" Background="LightSteelBlue">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="240" Margin="340,154,0,0" VerticalAlignment="Top" Width="226"/>

        <DataGrid Name="RegistrarsDataGrid" Loaded="RegistrarsDataGrid_Loaded" FontSize="14" Margin="0,0,248,0"/>

        <Button Name="ReadButton" Content="Read" HorizontalAlignment="Left" Height="36" Margin="347,172,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="ReadButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="36" Margin="347,264,0,0" VerticalAlignment="Top" Width="91" Background="Tomato" Click="CancelButton_Click"/>
        <Button Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="36" Margin="347,217,0,0" VerticalAlignment="Top" Width="91" Background="Tomato" Click="DeleteButton_Click"/>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="36" Margin="347,312,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="SaveButton_Click"/>

        <Button Name="FirstButton" Content="First" HorizontalAlignment="Left" Height="36" Margin="460,172,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="FirstButton_Click"/>
        <Button Name="NextButton" Content="Next ->" HorizontalAlignment="Left" Height="36" Margin="460,217,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="NextButton_Click"/>
        <Button Name="PreviousButton" Content="Previous -" HorizontalAlignment="Left" Height="36" Margin="460,264,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="PreviousButton_Click"/>
        <Button Name="LastButton" Content="Last" HorizontalAlignment="Left" Height="36" Margin="460,312,0,0" VerticalAlignment="Top" Width="91" Background="Azure" Click="LastButton_Click"/>
        
        <Button Name="RegistrarReportButton" Content="Create a report" HorizontalAlignment="Left" Height="36" Margin="408,353,0,0" VerticalAlignment="Top" Width="90" Background="Azure" Click="RegistrarReportButton_Click"/>

        <Image Source="/pictures/registrars.png" Margin="394,8,70,302"></Image>
        <Label Content="Registrars" HorizontalAlignment="Left" Margin="401,117,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Black"/>
    </Grid>
</Window>
